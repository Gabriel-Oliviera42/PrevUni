@page
@model Front.Pages.CursosModel
@{
    ViewData["Title"] = "Cursos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="text-muted">Bem Vindo</h5>
            <h2><strong>Cursos</strong></h2>
        </div>
        <button class="btn btn-outline-primary" onclick="location.reload()">
            🔄 Atualizar
        </button>
    </div>

    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="O que você procura?" />
        <button class="btn btn-primary">Pesquisar</button>
    </div>

    <div class="row">
        @foreach (var curso in Model.Cursos)
        {
            <div class="col-md-4 mb-4">
                <a asp-page="/Dashboard" asp-route-curso="@curso" class="text-decoration-none text-dark">
                    <div class="card shadow-sm border-primary h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                📘 @curso
                            </h5>
                            <p class="card-text mb-1"><strong>Coord:</strong> Flávia Santos</p>
                            <p class="card-text"><strong>Quant:</strong> 24 Matérias</p>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

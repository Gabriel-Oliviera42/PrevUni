@page
@model Front.Pages.IaChatAlunoModel
@{
    ViewData["Title"] = "Chat com IA";
}
@{
    ViewData["OcultarSombra"] = true;
}


<header class="linha welcome"
        style="
            justify-content: space-between;
            width: 100%;
            height: fit-content;
">
    <div class="coluna" style="--gap: 10px">
        <span class="SubH1 corAzul">Bem Vindo(a)</span>
        <h1 class="corPreta40B">Inteligência Artificial</h1>
    </div>
    <button class="botaoatualiza">Atualizar</button>
</header>
<div class="dashboard coluna"
     style="--gap: 10px; height: 100%; flex-direction: column-reverse; z-index:1">

    @if (Model.Resposta != null)
    {
        <div class="resposta">
            <h3>Resposta da IA:</h3>
            <pre>@Model.Resposta</pre>
        </div>
    }

    <form method="post">
        <div>
            <label>UserId:</label>
            <input asp-for="UserId" />
        </div>

        <div class="ImputIA linha" onclick="document.getElementById('IaPergunta').focus()">
            <img src="~/css/icons/estrelaIA.svg"
                 alt="ÍconeHome"
                 width="18"
                 height="18" />
            <input asp-for="Prompt"
                   type="text"
                   id="IaPergunta"
                   placeholder="Pergunte à Inteligência Artificial!" />
            <button type="submit">Gerar</button>
        </div>

    </form>
</div>

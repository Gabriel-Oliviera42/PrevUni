@page
@model Front.Pages.LogsModel
@{
    ViewData["Title"] = "Logs do Usuário";
}

<h2 class="mb-3">Logs do usuário: @Model.UsuarioNome</h2>

@if (Model.Logs?.Any() == true)
{
    <p><strong>ID:</strong> @Model.Logs[0].user_id</p>
    <p><strong>Último acesso:</strong> @Model.Logs[0].user_lastaccess</p>

    <div class="row row-cols-1 row-cols-md-2 g-3 mt-4">
        @foreach (var log in Model.Logs)
        {
            <div class="col">
                <div class="card border-info shadow-sm">
                    <div class="card-body p-2">
                        <h6 class="card-title mb-1">@log.date</h6>
                        <p class="mb-1">
                            <strong>Ação:</strong> @log.action<br />
                            <strong>Alvo:</strong> @log.target<br />
                            <strong>Componente:</strong> @log.component
                        </p>
                        <small class="text-muted">Curso: @log.course_fullname</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">Nenhum log encontrado para este usuário.</div>
}

@page
@model FrontendMoodle.Pages.IndexModel
@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários do Moodle</h1>

@if (Model.Usuarios?.Any() == true)
{
    <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
        @foreach (var usuario in Model.Usuarios)
        {
            <div style="border: 1px solid #ccc; border-radius: 10px; padding: 1rem; width: 250px;">
                <strong>@usuario.name</strong><br />
                <span><b>ID:</b> @usuario.user_id</span><br />
                <span><b>Último acesso:</b> @usuario.user_lastaccess</span>
            </div>
        }
    </div>
}
else
{
    <p>Nenhum usuário encontrado ou erro na API.</p>
}
